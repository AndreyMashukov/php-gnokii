{
    "bin": ["src/script"],
    "autoload" : {
        "psr-4" : {
            "Script\\": ["src"]
        },
        "psr-0" : {
            "Script\\": ["src"]
        },
        "classmap" : ["src"],
        "files": ["src/functions.php"]
    },
    "require": {
        "php": ">=5.6",
        "ext-SPL": "*",
        "ext-pcre": "*",
        "ext-Core": "*"
    },
    "autoload-dev" : {
        "psr-4" : {
            "Tests\\": ["tests"]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "ext-xdebug": "*"
    }
}
