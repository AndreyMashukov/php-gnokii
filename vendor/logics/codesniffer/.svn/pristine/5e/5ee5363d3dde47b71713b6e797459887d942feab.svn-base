 * @copyright 2013-2016 Vladimir Bashkirtsev
 * @license   https://github.com/squizlabs/PHP_CodeSniffer/blob/master/licence.txt BSD Licence
 * @version   SVN: $Date$ $Revision$
 * @link      $HeadURL$
 */

class GlobalFunctionSniff implements Sniff
    {

	/**
	 * Returns an array of tokens this test wants to listen for.
	 *
	 * @return array
	 */

	public function register()
	    {
		return array(T_FUNCTION);
	    } //end register()


	/**
	 * Processes this test, when one of its tokens is encountered.
	 *
	 * @param File $phpcsFile The file being scanned.
	 * @param int  $stackPtr  The position of the current token in the stack passed in $tokens.
	 *
	 * @return void
	 *
	 * @untranslatable __autoload
	 * @untranslatable Found
	 * @untranslatable \"%s\"
	 */

	public function process(File $phpcsFile, $stackPtr)
	    {
		$tokens = &$phpcsFile->tokens;

		if (empty($tokens[$stackPtr]["conditions"]) === true)
		    {
			$functionName = $phpcsFile->getDeclarationName($stackPtr);
			if ($functionName !== null)
			    {
				// Special exception for __autoload as it needs to be global.
				if ($functionName !== "__autoload")
				    {
					$error = _("Consider putting global function") . " \"%s\" " . _("in a static class");
					$data  = array($functionName);
					$phpcsFile->addWarning($error, $stackPtr, "Found", $data);
				    }
			    }
		    }
	    } //end process()


    } //end class

?>
